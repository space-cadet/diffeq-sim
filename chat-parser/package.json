{
  "name": "chat-parser",
  "version": "1.0.0",
  "description": "A parser for chat logs that uses LLM and rule-based analysis",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "chat-parser": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node --esm src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepare": "pnpm run clean && pnpm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  }
}